<!-- 东方明珠广播电视塔 -->
<style>
  .panel-tv {
    position: absolute;
    top: 0px;
    right: 0px;
    background: linear-gradient(
      90deg,
      rgba(0, 0, 0, 0) 0%,
      rgba(0, 16, 67, 1) 100%
    );
    /* opacity: 0.8; */
    width: 530px;
    height: 900px;
    padding: 40px 57px 40px 159px;
    box-sizing: border-box;
    transform: scale(0.8, 0.8);
    transform-origin: top right;
    z-index:99;
    display:none;
  }
  .panel-tv .chartBox {
    width: 315px;
    height: 100%;
  }
  .panel-tv .header {
    height: 128px;
    background: url(./assets/darkStyleImg/panel-title-bg.png) no-repeat center
      center / contain;
    position: relative;
    margin-bottom: 10px;
  }
  .panel-tv .hearder-text {
    font-size: 18px;
    color: #fff;
    width: 222px;
    height: 46px;
    line-height: 46px;
    text-align: center;
    position: absolute;
    top: 44px;
    right: 12px;
  }
  .panel-tv .sub-text {
    font-size:9px;
    color:#00C7E4;
    min-width:222px;
    text-align:center;
    position:absolute;
    top:94px;
    right:12px;
  }

  .panel-tv .buildInfo {
    /* display: flex;
    justify-content: space-between; */
    margin-bottom: 20px;
  }
  .panel-tv .buildInfo > div {
      display:inline-block;
      margin-right:43px;
  }
  .panel-tv .buildInfo > div > p:first-of-type {
    font-size: 26px;
    line-height: 180%;
    color: #00c7e4;
  }
  .panel-tv .buildInfo > div > p:last-of-type {
    font-size: 16px;
    color: #fff;
  }
  .panel-tv .chartsOne {
    height: 170px;
    padding: 8px 0px;
    background: url(./assets/darkStyleImg/panel-border-bottom.png) no-repeat
        center bottom / contain,
      url(./assets/darkStyleImg/panel-border-top.png) no-repeat center top /
        contain;
    margin-top: 17px;
    background-color: rgba(0,0,0,0.4);
    box-sizing: border-box;
    display:none;
  }
  .panel-tv .accident-description-title {
    padding: 6px 17px;
    font-size: 14px;
    color: #00c7e4;
    vertical-align: middle;
  }
  .panel-tv .accident-description-title img,
  span {
    vertical-align: middle;
  }
</style>

<div class="panel-tv">
  <div class="chartBox">
    <!-- title -->
    <div class="header">
      <div class="hearder-text">东方明珠广播电视塔</div>
      <p class="sub-text">THE ORIENTAL PEARL RADIO & TV TOWER</p>
    </div>
    <!-- build -->
    <div class="buildInfo">
      <div>
        <p>468m</p>
        <p>建筑总高</p>
      </div>
      <div>
        <p>73000m²</p>
        <p>总建筑面积</p>
      </div>
    </div>
    <!-- charts1 -->
    <div class="chartsOne line1">
        <div class="accident-description-title">
            <img
              style="height:14px;"
              src="./assets/darkStyleImg/icon_联系人@2x.png"
              alt=""
            />
            <span>本周超时访客楼层分布</span>
          </div>
      <!-- <p class="chartsTitle titleOne">本周超时访客楼层分布</p> -->
      <div id="mainFour" style="width:90%;height:80%;margin:0 auto;"></div>
    </div>
    <div class="chartsOne line2">
        <div class="accident-description-title">
            <img
              style="height:14px;"
              src="./assets/darkStyleImg/icon_baojing@2x.png"
              alt=""
            />
            <span>4 、5月报警数据</span>
          </div>
      <div id="mainFive" style="width:90%;height:80%;margin:0 auto;"></div>
    </div>
    <div class="chartsOne line3">
        <div class="accident-description-title">
            <img
              style="height:14px;"
              src="./assets/darkStyleImg/icon_tousu@2x.png"
              alt=""
            />
            <span>接到投诉数据</span>
          </div>
      <div id="mainSix" style="width:90%;height:80%;margin:0 auto;"></div>
    </div>
  </div>
</div>

<script>
  var chartFour = echarts.init(document.getElementById("mainFour"));
  var chartFive = echarts.init(document.getElementById("mainFive"));
  var chartSix = echarts.init(document.getElementById("mainSix"));
  var option4 = {
