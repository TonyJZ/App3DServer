        type: "line" // 默认为直线，可选为：'line' | 'shadow'
      }
    },
    grid: {
      left: "3%",
      right: "4%",
      bottom: "3%",
      top: "10%",
      containLabel: true
    },
    xAxis: [
      {
        type: "category",
        data: [
          "1-12",
          "13-24",
          "26-36",
          "37-48",
          "49-60",
          "61-72",
          "73-84",
          "86-96"
        ],
        axisTick: {
          alignWithLabel: true
        },
        axisLabel: { color: "rgba(255,255,255,0.4)" }
      }
    ],
    yAxis: [
      {
        type: "value",
        axisLabel: { color: "rgba(255,255,255,0.4)" },
        splitLine: {
          show: false
        }
      }
    ],
    series: [
      {
        type: "bar",
        barWidth: "60%",
        data: [30, 62, 70, 165, 145, 55, 55, 55],
        itemStyle: {
          normal: {
            color: function(params) {
              let colorList = [
